{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "author": {
      "type": "object",
      "description": "An author with a name, avatar, and links to different profiles",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the author, as it is to be displayed."
        },
        "twitter": {
          "type": "string",
          "description": "A link to the twitter profile of the author"
        },
        "linkedin": {
          "type": "string",
          "description": "A link to the linkedin profile of the author"
        },
        "github": {
          "type": "string",
          "description": "A link to the github profile of the author"
        },
        "website": {
          "type": "string",
          "description": "A link to the website of the author"
        },
        "blog": {
          "type": "string",
          "description": "A link to the blog of the author"
        },
        "avatar": {
          "type": "string",
          "description": "A link to the avatar image of the author"
        }
      },
      "required": [
        "name"
      ]
    },
    "sub_event": {
      "type": "object",
      "description": "A sub-event of the event included in the agenda.",
      "properties": {
        "type": {
          "enum": [ "break", "workshop", "talk", "tutorial", "hackathon" ],
          "description": "The type of the sub-event."
        },
        "title": {
          "type": "string",
          "description": "The title of the sub-event."
        },
        "time": {
          "type": "string",
          "description": "The time the sub-event starts."
        },
        "authors": {
          "type": "array",
          "description": "A list of authors of this sub-event",
          "items": { "$ref": "#/definitions/author" }
        }
      },
      "required": [
        "type",
        "title",
        "time"
      ]
    },
    "event": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the event."
        },
        "time": {
          "type": "string",
          "description": "The time the event starts."
        },
        "abstract": {
          "type": "string",
          "description": "The abstract of the event."
        },
        "venue": {
          "type": "string",
          "description": "The address or a representation of where the event venue is."
        },
        "registration-closes": {
          "type": "string",
          "description": "The time the registration of the event closes."
        },
        "agenda": {
          "type": "array",
          "description": "The agenda of the event, made up of multiple sub-events",
          "items": { "$ref": "#/definitions/sub_event" }
        }
      },
      "required": [
        "name",
        "time",
        "abstract",
        "venue",
        "agenda"
      ]
    }
  }, 
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "description": "The events.",
      "items": { "$ref": "#/definitions/event" }
    } 
  }
}